- video_id = rand(1000)

:css
  .video_#{video_id} {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 */
    height: 0;
  }
  .video_#{video_id} iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  #ProjectVideo_#{video_id} {
    background: #{video_background};
  }

.video.slide#ProjectVideo{:id => video_id, :class => "video_#{video_id}"}
